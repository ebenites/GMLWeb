@{
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}

<table border="1" class="table table-striped table-bordered table-hover">
    <colgroup>
        <col />
        <col width="100" />
        <col width="100" />
        <col width="160" />
        <col width="40" />
    </colgroup>
    <thead>
        <tr>
            <th>Local</th>
            <th>N° Equipos</th>
            <th>Orden Prog.</th>
            <th>Estado</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var local in ViewBag.planlocales)
        {
            <tr>
                <td>@local.nombre</td>
                <td>@local.nequipos</td>
                <td>@local.codigo</td>
                <td>@(local.ncronogramas != 0 ? (local.estado == 0 ? "PENDIENTE" : "GENERADO") : "SIN CRONOGRAMAS")</td>
                <td>
                    @if (local.estado == 0 && local.ncronogramas != 0)
                    {
                        <label><input type="radio" name="local" value="@local.codigo"/></label>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
