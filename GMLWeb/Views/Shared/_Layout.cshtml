<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Gestión de Mantenimiento de Equipo de Local</title>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/jqueryval")

    @Styles.Render("~/Content/datepicker")
    @Scripts.Render("~/bundles/datepicker")

    @Styles.Render("~/Content/datetimepicker")
    @Scripts.Render("~/bundles/datetimepicker")

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/js")

    <script type="text/javascript">
		$(function(){

			// Menu
			$(".navbar button.btn-sidebar").click(function(e) {
		        $(".sidebar").slideToggle();
		    });

		});
    </script>

    @RenderSection("scripts", required: false)
    
    <!--link rel="stylesheet" type="text/css" href="" /-->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->


</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">

                <button type="button" class="btn btn-default btn-sidebar" aria-label="Mostrar/Ocultar Menú">
                    <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
                </button>

                <button type="button" class="navbar-toggle collapsed"
                        data-toggle="collapse" data-target="#navbar" aria-expanded="false"
                        aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand navbar-logo" href="#"><img src="@Url.Content("~/Content/logo.png")" height="48" /></a>

                <a class="navbar-brand" href="#">Sistema GMLWeb</a>

            </div>
            <div id="navbar" class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
                <form class="navbar-form navbar-right">
                    <input type="text" class="form-control" placeholder="Buscar...">
                </form>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Locales", "Index", "Locales")</li>
                    <li>@Html.ActionLink("Equipos", "Index", "Equipos")</li>
                    <li>@Html.ActionLink("Solicitudes", "Index", "Solicitudes")</li>
                    <li>@Html.ActionLink("OrdenServicios", "Index", "OrdenServicios")</li>
                    <li>@Html.ActionLink("Tecnicos", "Index", "Tecnicos")</li>
                </ul>
                <ul class="nav nav-sidebar">
                    <li>@Html.ActionLink("Registrar Solicitud de Mantenimiento Correctivo", "Registrar", "Solicitudes")</li>
                    <li>@Html.ActionLink("Programar Mantenimiento Correctivo", "Index", "Programaciones")</li>
                    <li>@Html.ActionLink("Plan de Mantenimiento Preventivo", "Index", "Programaciones")</li>
                </ul>
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

                @{
                    string message = TempData["Message"] as string;
                    if (message != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade in" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                            @message
                        </div>
                    }
                }

                @RenderBody()

            </div>
        </div>
    </div>

    <div id="footer">
        Todos los Derechos Reservados © @DateTime.Now.Year
    </div>

</body>
</html>
